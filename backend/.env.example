# Configuración de la base de datos
# Reemplaza los valores `changeme_*` con tus credenciales de base de datos.
DB_CONNECTION="mysql"  # Opciones: mysql, postgresql, sqlite
DB_HOST="localhost"
DB_PORT="3306"
DB_DATABASE="changeme_db"
DB_USERNAME="changeme_user"
DB_PASSWORD="changeme_password"

# Alternativa: Si prefieres usar DATABASE_URL directamente, descomenta la siguiente línea
# DATABASE_URL="mysql+pymysql://usuario:password@localhost/nombre_bd"

# Clave secreta para firmar los tokens JWT (genera una aleatoria en producción)
JWT_SECRET_KEY="change-this-to-a-random-secret-key"

# Clave secreta para Flask (genera una aleatoria en producción)
SECRET_KEY="change-this-to-a-random-secret-key"

# Configuración de Gemini AI
# Obtén tu API key en: https://makersuite.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key-here"
GEMINI_MODEL="gemini-1.5-flash"  # o "gemini-1.5-pro" para mejor calidad

# Configuración opcional de Gemini
# GEMINI_TEMPERATURE="0.7"
# GEMINI_MAX_OUTPUT_TOKENS="2048"
# GEMINI_MAX_CONTEXT_TOKENS="30000"

# Auto-asignación de grado al registrarse
# Si AUTO_ASSIGN_GRADE es "true", los usuarios serán automáticamente asignados
# al grado especificado en AUTO_ASSIGN_GRADE_NAME.
# Si es "false", los usuarios quedarán inactivos hasta que un admin les asigne un grado.
AUTO_ASSIGN_GRADE="true"
AUTO_ASSIGN_GRADE_NAME="changeme_grade_name"
